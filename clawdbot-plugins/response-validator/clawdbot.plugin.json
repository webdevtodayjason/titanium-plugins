{
  "id": "response-validator",
  "name": "Response Validator",
  "description": "Enforces response format requirements (reports, audio, canvas)",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "description": "Enable/disable validation"
      },
      "reportKeywords": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Keywords that trigger report validation"
      },
      "docKeywords": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Keywords that trigger canvas validation"
      },
      "audioMaxLength": {
        "type": "number",
        "description": "Max response length when audio enabled (default: 300)"
      }
    }
  }
}
